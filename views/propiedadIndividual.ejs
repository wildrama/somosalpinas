<% layout('layouts/boilerplate')%>

  <div class="container">
    <nav class="indicadorDePagina px-4 d-flex mt-4" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><span class="mx-1"><img src="/svg/arrowBack.svg" alt="atras"></span>
            Inicio</a></li>
        <li class="breadcrumb-item"><a href="/propiedades"> Propiedades</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= propiedad.titulo %>
        </li>
      </ol>
    </nav>

  </div>


  <section class="container d-none d-lg-block borderDePublicacionDesktop ">

    <div class=" casaIndividualDesktop py-2 pb-3 text-center">
      <div class="row ">
        <div class="col-6">

          <div class="row mx-3">

            <div class="col-12  ">


              <h2 class="tituloDesktop">
                <%= propiedad.titulo %>
              </h2>


            </div>


            <div class="col-12 ">
              <p class="descripcionDesktop px-3 py-3">
                <%= propiedad.descripcion %>
              </p>
            </div>

            <div class="col-12 py-3 ">
              <a class="direccionPublicacionDesktop" href="#">
                <span class="px-2">
                  <img class="ubiWebIcon" src="/svg/ubi.svg" alt="Icono Ubicacion">
                </span>
                <%= propiedad.direccion %>

              </a>

            </div>
            <div class="row  mt-5 align-items-baseline ">
              <div class="col-4 d-flex peso">

                <p class=" precio">
                  <% if(propiedad.precio=='0' ){ %>

                    <span>
                      $--Consultar
                    </span>

                    <% } else{ %>
                      <span>
                        $<%=propiedad.precio %>
                      </span>
                      <% } %>


                </p>
              </div>
              <div class="col-6 ">
                <a class=" p-2  d-flex justify-content-around contactarseDesktop" href="https://wa.me/543329561425">
                  <img class=" " src="/svg/wpicon.svg" alt="Icono Telefono">
                  Contactarse</a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="ventaTag">
            <%= propiedad.tipo %>
          </div>

          <!-- Carousel wrapper -->
          <div id="carouselExampleIndicators" class="carousel carousel-dark slide carousel-fade"
            data-mdb-ride="carousel">
            <!-- Slides -->
            <div class="carousel-inner mb-5">
              <% propiedad.imagenes.forEach( ( imagen , i )=> { %>

                <div class="carousel-item <%= i === 0? 'active':''%>">
                  <img src="<%= imagen.crop %>" class="d-block w-100" alt="..." />
                </div>
                <% }) %>


            </div>
            <!-- Slides -->

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-mdb-target="#carouselExampleIndicators"
              data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previo</span>
            </button>
            <button class="carousel-control-next" type="button" data-mdb-target="#carouselExampleIndicators"
              data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Siguiente</span>
            </button>
            <!-- Controls -->

            <!-- Thumbnails -->
            <div class="carousel-indicators" style="margin-bottom: -20px;">
              <% propiedad.imagenes.forEach( ( imagen , i )=> { %>

                <button type="button" data-mdb-target="#carouselExampleIndicators" data-mdb-slide-to="<%= i %> "
                  class="<%= i === 0? 'active':''%>" aria-current="true" aria-label="Slide <%= i %> "
                  style="width: 100px;">
                  <img class="d-block w-100" src="<%= imagen.thumbnail %>" class="img-fluid" />
                </button>
                <% }) %>

            </div>
            <!-- Thumbnails -->
          </div>
          <!-- Carousel wrapper -->

        </div>

      </div>
    </div>
  </section>


