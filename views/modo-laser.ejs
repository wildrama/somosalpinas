<% layout('layouts/boilerplate')%>

<main>
    <div class="container">
        <nav class="indicadorDePagina px-lg-4 d-flex mt-4" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><span class="mx-1"><img src="/svg/arrowBack.svg" alt="atras"></span>
                Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page"> <b>Modo Laser</b> </li>
          </ol>
        </nav>
      
      </div>
   <section >

        <div class="container p-md-5 text-sm-start text-lg-center">
            <h1 class="text-center mb-1">
                ALPINAS MODO LÁSER
            </h1>
            <h3 class=" mb-3">Diseños 100% personalizados</h3>


          <p class="lead mb-2">
            Escribinos por diseños personalizados, detallando:
          </p>  

          <ul style="list-style: none;">
            <li class="">Cantidades</li>
            <li class="">Tamaños</li>

            <li class="">Material</li>
            
            <li class="">Imagen o vectorizado (en caso de tener)</li>
            <li class="">Plazo de entrega requerido</li>
            <li class="">Número de WhatsApp</li>
            
          </ul>
          <div class="container text-center">
            <div class="row px-lg-5">
                <div class="col-12 col-lg-6  mb-5 mt-3 mt-lg-0 ">
                  <a id="modoLaserWP" class=" " href="#">
                    ENVIA TU MENSAJE<img class="img-fluid px-2" src="/wpblack.png" alt="">
                  </a>
                </div>
                <div class="col-12 col-lg-6  mb-3">  
                 <a id="modoLaserIg" class=" " href="#">
                    <img class="img-fluid" src="/igblack.png" alt=""> @alpinas.modolaser
                  </a>
                </div>
            </div>
         
          </div>
         


          
        </div>
   </section>


   <section id="galeriaModoLaser">

        <div class="container">
            <p class="mx-3 ">
               <i>Fotos de productos realizados</i> 
            </p>
            <div id="modoLaserRow" class="row justify-content-around px-3">
    
           

                <% for( let modoLaserProd of modoLaserProductos ) { %>
                    <div class="col-6  col-lg-4 ">
                        <div class="modoLaserCard">
                            
                            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                               
                                <div class="carousel-inner">
                                 
                                 
                                  <% modoLaserProd.imagenes.forEach( ( imagen , i )=> { %>
      
                                    <div class="carousel-item <%= i === 0? 'active':''%>">
                                      <img style="border-radius:23px ;" src="<%= imagen.carrusel %>" class="d-block w-100" alt="" />
                                    </div>
                                    <% }) %>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                  <span class="visually-hidden">Previo</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                  <span class="visually-hidden">Siguiente</span>
                                </button>
                              </div>                 
                                   </div>
                        <p class="tituloModoLaser lead text-center">
    
                            <%= modoLaserProd.titulo %> 
                        </p>
                    </div>
                <% } %>
              
            

            </div>
        </div>
   </section>
<section >
    <div class="container">
        <div class="row align-items-center">
            <div class="col-4 col-lg-4 text-center">
                <img class="img-fluid" class="img-fluid" src="/argentinaSVG.png" alt="">
            </div>
            <div class="col-8 col-lg-6 text-center">
                <p style="font-family:Montserrat; font-weight: bold; font-size: 2em;" class="envioText">
                    Realizamos envios a todo el País
                </p>
            </div>

        </div>
    </div>
</section>


