<% layout('layouts/boilerplate')%>

  <div class="container">
    <nav class="indicadorDePagina px-4 d-flex mt-4" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/administrador"><span class="mx-1"><img src="/svg/arrowBack.svg"
                alt="atras"></span>
            Inicio</a></li>
        <li class="breadcrumb-item"><a href="/administrador"> Administrador</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= producto.titulo %>
        </li>
      </ol>
    </nav>

  </div>


  <section class="container d-none d-md-block borderDePublicacionDesktop ">

    <div class=" casaIndividualDesktop py-2 pb-3 text-center">
      <div class="row ">
        <div class="col-6">

          <div class="row mx-3">

            <div class="col-12  ">


              <h2 class="tituloDesktop">
                <%= producto.titulo %>
              </h2>


            </div>


            <div class="col-12 ">
              <p class="descripcionDesktop px-3 py-3">
                <%= producto.descripcion %>
              </p>
            </div>

            <div class="col-12 py-3 ">
              <a class="direccionPublicacionDesktop" href="#">
                <span class="px-2">
                  <img class="ubiWebIcon" src="/svg/ubi.svg" alt="Icono Ubicacion">
                </span>
                <%= producto.direccion %>

              </a>

            </div>
            <div class="row  mt-5 align-items-baseline ">
              <div class="col-6 d-flex px-4 peso">
                <p class=" precio">
                  <% if(producto.precio=='0'){ %>

                    <span>
                      $--Consultar
                    </span>

                    <% } else{ %>
                      <span>
                        $<%=producto.precio %>
                      </span>
                      <% } %>


                </p>
              </div>

            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="ventaTag">
            Venta
          </div>
          <!-- Carousel wrapper -->
          <div id="carouselExampleIndicators" class="carousel carousel-dark slide carousel-fade"
            data-mdb-ride="carousel">
            <!-- Slides -->
            <div class="carousel-inner ">
              <% producto.imagenes.forEach( ( imagen , i )=> { %>

                <div class="carousel-item <%= i === 0? 'active':''%>">
                  <img src="<%= imagen.crop %>" class="d-block w-100" alt="..." />
                </div>
                <% }) %>


            </div>
            <!-- Slides -->

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-mdb-target="#carouselExampleIndicators"
              data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-mdb-target="#carouselExampleIndicators"
              data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <!-- Controls -->

            <!-- Thumbnails -->
            <div class="carousel-indicators" style="margin-bottom: -20px;">
              <% producto.imagenes.forEach( ( imagen , i )=> { %>

                <button type="button" data-mdb-target="#carouselExampleIndicators" data-mdb-slide-to="<%= i %> "
                  class="<%= i === 0? 'active':''%>" aria-current="true" aria-label="Slide 1" style="width: 100px;">
                  <img class="d-block w-100" src="<%= imagen.thumbnail %>" class="img-fluid" />
                </button>
                <% }) %>

            </div>
            <!-- Thumbnails -->
          </div>
          <!-- Carousel wrapper -->
        </div>

      </div>
    </div>



    <div class="d-md-none casaIndividualDesktop py-2 pb-3 text-center">
      <div class="row ">
        <div class="col-6">

          <div class="row mx-3">

            <div class="col-12  ">


              <h2 class="tituloDesktop">
                <%= producto.titulo %>
              </h2>


            </div>


            <div class="col-12 ">
              <p class="descripcionDesktop px-3 py-3">
                <%= producto.descripcion %>
              </p>
            </div>

            <div class="col-12 py-3 ">
              <a class="direccionPublicacionDesktop" href="#">
                <span class="px-2">
                  <img class="ubiWebIcon" src="/svg/ubi.svg" alt="Icono Ubicacion">
                </span>
                <%= producto.direccion %>

              </a>

            </div>
            <div class="row  mt-5 align-items-baseline ">
              <div class="col-6 d-flex px-4 peso">
                <p class=" precio">
                  <% if(!producto.precio){ %>

                    <span>
                      $--Consultar
                    </span>

                    <% } else{ %>
                      <span>
                        $<%=producto.precio %>
                      </span>
                      <% } %>


                </p>
              </div>

            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="ventaTag">
            Venta
          </div>
          <!-- Carousel wrapper -->
          <div id="carouselExampleIndicators" class="carousel carousel-dark slide carousel-fade"
            data-mdb-ride="carousel">
            <!-- Slides -->
            <div class="carousel-inner ">
              <% producto.imagenes.forEach( ( imagen , i )=> { %>

                <div class="carousel-item <%= i === 0? 'active':''%>">
                  <img src="<%= imagen.crop %>" class="d-block w-100" alt="..." />
                </div>
                <% }) %>


            </div>
            <!-- Slides -->

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-mdb-target="#carouselExampleIndicators"
              data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-mdb-target="#carouselExampleIndicators"
              data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <!-- Controls -->
              
            <!-- Thumbnails -->
            <div class="carousel-indicators" style="margin-bottom: -20px;">
              <% producto.imagenes.forEach( ( imagen , i )=> { %>

                <button type="button" data-mdb-target="#carouselExampleIndicators" data-mdb-slide-to="<%= i %> "
                  class="<%= i === 0? 'active':''%>" aria-current="true" aria-label="Slide 1" style="width: 100px;">
                  <img class="d-block w-100" src="<%= imagen.thumbnail %>" class="img-fluid" />
                </button>
                <% }) %>

            </div>
            <!-- Thumbnails -->
          </div>
          <!-- Carousel wrapper -->
        </div>

      </div>
    </div>
  </section>



  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.js"></script>